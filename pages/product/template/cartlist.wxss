.pt-cart{
  position: fixed;
  top: 100rpx;
  left: 0rpx;
  width: 100%;
  height: calc(100% - 200rpx);
  z-index: 99;
}
.pt-cart-mask{
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.pt-cart-list{
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.pt-cart-list-title{
  background-color: rgb(240, 241, 242);
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: darkgray;  
}
.pt-cart-list-title::after{
  content: '';
  display: block;
  clear: both;
}
.pt-cartlist-name{
  float: left;
}
.pt-cartlist-clear{
  float: right;
  font-size: 0.8rem;
}

.pt-cart-list-content{
  /* height: 100%; */
  max-height: calc(100% - 200rpx);
  background-color: white;
  overflow-y: scroll;
}

.pt-cart-item{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
}
.pt-cart-item::after{
  content: '';
  display: block;
  clear: both;
}
.pt-cart-item-name,.pt-cart-item-price,.pt-cart-item-count{
  float: left;
}
.pt-cart-item-name{
  padding-left: 30rpx;
  width: 50%;
  color: darkgray;
}
.pt-cart-item-price{
  width: 18%;
  text-align: left;

}
.pt-cart-item-count{
  width: 32%;
  text-align: center;
}