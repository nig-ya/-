/* pages/product/product.wxss */
@import "template/cartlist.wxss";

page{
  height: 100%;
  overflow: hidden;
}
.movie-title{
  height: 100rpx;
  line-height: 100rpx;
  background-color:white;
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  z-index: 9;
}
.movie-name{
  padding-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.map-marker{
  padding-left: 30rpx;
  color: black;
}
.angle-right{
  font-size: 1.5rem;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
/* 分割线 */

.split-line{
  position: absolute;
  bottom: -45rpx;
  left: 0px;
  height: 45rpx;
  width: 100%;
}
/* sale */
.sale{
  position: absolute;
  width: 100%;
  /* margin-top: 100rpx; */
  top: 145rpx;
  height: calc(100% - 245rpx);
  color: rgb(116, 116, 115);
}
.sale-title{
  height: 100rpx;
  position: fixed;
  width: 100%;
  z-index: 8;
  border-bottom: 1px solid rgb(219, 219, 219);
}
.sale-title::after{
  content: '';
  display: block;
  clear: both;
}
.sale-title-side,.sale-title-list{
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 0.8rem;
  text-align: center;
}
.sale-title-side{
  width: 170rpx;
  background-color: rgb(252, 250, 233);
}
.sale-title-list{
  width: calc(100% - 170rpx);
}
.split{
  display: inline-block;
  width: 10rpx;
  height: 25rpx;
  transform: translateY(4rpx) rotateZ(45deg);
  margin-left: 6.5rpx;
  margin-right: 6.5rpx;
  border-radius: 50%;
}
.tip-title{
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.split-1{
  background-color: rgb(248,142,141);
}
.split-2{
  background-color: rgb(246,109,109);
}
.split-3{
  background-color:rgb(245,78,79);
}
.sale-content{
  position: fixed;
  top: 245rpx;
  overflow: hidden;
  width: 100%;
  height: calc(100% - 345rpx);
}
.sale-content::after{
  content: '';
  display: block;
  clear: both;
}
.sale-side,.sale-list{
  float: left;
  font-size: 0.8rem;
  color: black;
}
.sale-side{
  width: 170rpx;
  height: 100%;
  text-align: center;
  background-color: rgb(252, 250, 233);
  box-sizing: border-box;
}
.sale-side-item{
  color: rgb(116, 116, 115);
  height: 90rpx;
  line-height: 90rpx;
  border-bottom:1px solid rgb(225, 225, 224);
}
.sale-list{
  width: calc(100% - 170rpx);
  height: 100%;

}
scroll-view{
  width: 100%;
  height: 100%;
  /* background-color: blue; */
}
/* 结算 */
.checkout{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0px;
  border-top: 1px solid rgb(224,224,224);
  border-bottom: 1px solid rgb(183,183,183);
  z-index: 999;
}
.check-icon{
  position: absolute;
  left:30rpx;
  top: -20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(68, 71, 81);
  text-align: center;
  line-height: 100rpx;
  font-size: 1.2rem;
  color: white;
}
.shopping-cart-marker{
  position: absolute;
  top: -10rpx;
  right: -15rpx;
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  border-radius: 50%;
  color: white;
  font-size: 0.7rem;
  background-color: rgb(179, 139, 86);
}
.total-price{
  position: absolute;
  left: 130rpx;
  top: 0rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  color: rgb(179, 139, 86);
  font-size: 1.3rem;
  
}
.check-btn{
  position: absolute;
  top: 0px;
  right: 0px;
  height: 100%;
  width: 200rpx;
  background-color: rgb(194, 196, 204);
  text-align: center;
  line-height: 100rpx;
  color: white;
}
/* 购物车不为空的样式 */
.hasCartlist{
  background-color: rgb(179, 139, 86);
}

/* 卖品细节 */
.sale-list-item{
  position: relative;
  height: 200rpx;
  padding-top: 30rpx;
  padding-bottom: 50rpx;
  border-bottom: 1px solid rgb(228, 228, 228);
  width: 100%;
}
.goods-img{
  float: left;
  width: 170rpx;
  height: 100%;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.goods-info{
  float: left;
  width: calc(100% - 190rpx);
  text-align: left;
  
}
.goods-title{
  height: 55rpx;
  line-height: 55rpx;
  padding-bottom: 20rpx;
  display: block;
  font-size: 1rem;
}
.goods-des{
  height: 40rpx;
  line-height: 40rpx;
  padding-bottom: 15rpx;
  display: block;
  font-size: 0.8rem;
  color: rgb(116, 116, 115);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-price{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  color: rgb(179, 139, 86);
  font-size: 1.1rem;
}
.add-cart{
  position: absolute;
  bottom: 25rpx;
  right: 20rpx;
  width: 180rpx;
  height: 50rpx;
  color: rgb(179, 139, 86);
  text-align: center;
  line-height: 50rpx;
  font-size: 1.4rem;
}
.cart-count{
  font-size: 1.2rem;
  color: black;
}
.fa-minus-circle{
  height: 50rpx;
  line-height: 50rpx;
  float: left;
}
.fa-plus-circle{
  height: 50rpx;
  line-height: 50rpx;
  float: right;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.active{
  background-color: white;
}