/* pages/person/person.wxss */
page{
  height: 100%;
}
.person{
  height: 100%;
  background-color: #F0F1F2;
}
.person-header{
  height: 300rpx;
  background-color: #D2A264;
  position: relative;
}
.person-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* background-color: lightpink; */
  position: absolute;
  top: 50%;
  left: 30rpx;
  transform: translateY(-50%);
  text-align: center;
  line-height: 120rpx;
}
.avatar-img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  font-size: 3.2rem;
  color: white;
}
.person-info{
  width: 400rpx;
  height: 120rpx;
  color: white;
  position: absolute;
  left: 200rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.person-nickname{
  font-size: 1.2rem;
}
.person-wxid{
  font-size: 0.8rem;
}
.person-order{
  margin-top: 30rpx;
  
}
.movie-order,.goods-order,.wallet{
  height: 100rpx;
  line-height: 100rpx;
  /* width: 100%; */
  padding-left: 30rpx;
  padding-right: 30rpx;
  /* border:1px solid black; */
  position: relative;
  border-bottom: 1px solid #F0F1F2;
  background-color: white;
}
.fa-film,.fa-gift,.fa-cc-paypal{
  color: #D2A264;
  margin-right: 30rpx;
}
.fa-angle-right{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  font-size: 1.2rem;
  color: darkgray;
}
.person-login{
  margin-top: 20rpx;
  height: 120rpx;
  background-color: white;
  line-height: 120rpx;
}
button{
  width: 100%;
  height: 100%;
  border: none !important;
  font-size: 1rem !important;
  color: #D2A264 !important;
  line-height: 120rpx !important;
}