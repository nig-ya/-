/* pages/movie/movie.wxss */
.movie-title{
  height: 100rpx;
  line-height: 100rpx;
  background-color:white;
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  z-index: 9;
}
.movie-name{
  padding-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.map-marker{
  padding-left: 30rpx;
  color: black;
}
.angle-right{
  font-size: 1.5rem;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 轮播图 */
swiper{
  margin-top: 100rpx;
  height: 200rpx;
}
.slide-image{
  width:100%;
  height: 100%;
}
/* 列表 */
.movie-list{
  padding-left: 25rpx;
}
.movie-item{
  padding:25rpx;
  padding-left: 0rpx;
  border-bottom: 1px solid lightgray;
  position: relative;
}
.movie-item::after{
  display: block;
  content: '';
  clear: both;
}
.movie-img{
  width: 130rpx;
  height: 200rpx;
  float: left;
}
.movie-img-item{
  width: 100%;
  height: 100%;
}
.movie-info{
  height: 200rpx;
  padding-left: 25rpx;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: space-around;

}
.movie-info-name{
  font-size: 0.9rem;
}
.movie-info-des,.movie-info-joiner{
  font-size: 0.8rem;
  color: darkgray;
}

/* 箭头购票 */
.angle-right-go{
  position: absolute;
  right: 20rpx;
}
.buyTrick{
  position: absolute;
  font-size: 0.9rem;
  right: 20rpx;
  bottom: 30rpx;
  color: white;
  height: 60rpx;
  width: 120rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 40rpx;
  background-color: #D2A264;
}
