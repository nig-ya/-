page{
  height: 100%;
  background-color: white;
}
.film{
  position: relative;
  height: 100%;
  background-color: #F2F2F2;
}
.film-msg{
  background-color: white;
}
.film-msg-bg{
  position: relative;
  height: 150rpx;
}
.film-bg{
  width: 100%;
  height: 100%;
  filter: blur(3px);
}
.film-poster{
  position: absolute;
  top: 20rpx;
  left: 0rpx;
  width: 270rpx;
  height: 330rpx;
}
.film-title,.film-other-title{
  position: absolute;
  left: 270rpx;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 350rpx;
}
.film-title{
  top: 40rpx;
}
.film-other-title{
  top: 100rpx;
  font-size: 0.8rem;
}
.film-msg-des{
  padding-left: 270rpx;
  padding-top: 0rpx;
  height: 230rpx;
  font-size: 0.8rem;
  color: black;
}
.film-duration,.film-type,.film-publishtime,.film-des-title{
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}
.film-rating{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  right: 40rpx;
  bottom: -20rpx;
  background-color: #E7B168;
  color: white;
  padding: 5rpx;
}
.film-intr{
  margin-top: 25rpx;
  /* height: auto; */
  color: darkgrey;
  background-color: white;
}
.film-text{
  display: inline-block;
  height: 100rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  overflow: hidden;
  font-size: 1rem;
  /* text-align: left; */
}
.auto-height{
  height: auto;
}
.film-up-down{
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 1.5rem;
}

/* scroll-view的父元素 */
.film-actors{
  width: 100%;
  margin-bottom: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  margin-top: 20rpx;
  
}
/* scroll-view */
.film-cover-list{
  height: 300rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  background-color: white;
}
/* scroll-view的子元素 */
.film-cover{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.film-img{
  margin-top: 10rpx;
  width: 100%;
  height: 100%;
}
.actor-name{
  width: 150rpx;
  height: 80rpx;
  font-size: 0.7rem;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* display: -webkit-box;  
  line-clamp: 2;  
  box-orient: vertical;  
  white-space: pre-wrap;  */

}
.take-check{
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  height: 100rpx;
  background-color: #D49D60;
  color: white;
  text-align: center;
  line-height: 100rpx;
  font-size: 1rem;
  
}