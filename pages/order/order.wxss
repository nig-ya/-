page{
  height: 100%;
  background-color: #EFEFEF;
}
.cinema-name{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  background-color: white;
}
.goods-list{
  padding-left: 30rpx;
  padding-right: 20px;
  background-color: white;
}
.goods-item{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px dashed darkgray;
}
.goods-item::after{
  content: '';
  display: block;
  clear: both;
}
.goods-info{
  margin-left: 20rpx;
  width: calc(100% - 300rpx);
}
.goods-count{
  position: absolute;
  top: 50%;
  right: 0rpx;
  transform: translateY(-50%);
}
.goods-img,.goods-info,.goods-count{
  float: left;
}
.goods-img{
  width: 150rpx;
  height: 150rpx;
  border: 1px solid lightgray;
  padding: 5px;
}
image{
  width: 100%;
  height: 100%;
}
.goods-info{
  font-size: 0.8rem;
}
.goods-title{
  color: black;
}
.goods-des{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: darkgray;

}
.goods-price{
  color: #D2A264;
}

.show-more{
  font-size: 0.8rem;
  color: darkgray;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid lightgray;
  background-color: white;
}
.total-price{
  height: 100rpx;
  line-height: 100rpx;
  color: darkgray;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: white;
}

.total-price-val{
  float: right;
  font-size: 0.9rem;
}

.goods-discount,.card-discount{
  background-color: white;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: darkgray;
}
.goods-discount-val,.card-discount-val{
  float: right;
  font-size: 0.8rem;
}
.fa-angle-right{
  vertical-align: middle;
  margin-left: 20rpx;
  font-size: 1.2rem;
}

.payment{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: white;
}
.payment-title{
  padding-left: 30rpx;
  float: left;
  font-size: 0.9rem;
}
.payment-price{
  color: #D2A264;
}
.payment-btn{
  width: 200rpx;
  background-color: #D2A264;
  text-align: center;
  color: white;
  font-size: 0.8rem;
  float: right;
}